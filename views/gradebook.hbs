<style>
@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');
</style>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>EduLink</title>
</head>
<body class="mt-[75px]">
    <nav class="navbar">
    <div class="nav-left">
        <h1 class="title">EduLink</h1>
    </div>
    <div class="nav-right">
        <a href="/home">
            <div class="home">Home</div>
        </a>
        <a href="">
            <div class="profile">Profile</div>
        </a>
        <a href="/">
             <button class="logout">Logout</button>
        </a>
    </div>
    </nav>

    <h2 class="pt-2 pl-2 text-xl font-bold">GRADEBOOK</h2>
<table border="1">
    <thead>
        <tr>
            <th>Gradebook ID</th>
            <th>Course ID</th>
            <th>Student ID</th>
            <th>Student Name</th>
            <th>Final Grade</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each grade}}
        <tr>
            <td>{{this.Gradebook_ID}}</td>
            <td>{{this.Course_ID}}</td>
            <td>{{this.Student_ID}}</td>
            <td>{{this.Student_Name}}</td>
            <td>{{this.Final_Grade}}</td>
            <td>
                <!-- Edit Button -->
                <a href="/gradebook/edit_gradebook/{{this.Gradebook_ID}}">
                    <button class="bg-white rounded-xl w-20" type="button">Edit</button>
                </a>

                <!-- Delete Button -->
                <form action="/gradebook/delete_gradebook/{{this.Gradebook_ID}}" method="POST" style="display:inline;">
                    <button class="bg-[rgba(255,135,135,0.51)] rounded-xl w-20" type="submit" onclick="return confirm('Are you sure you want to delete this user?')">Delete</button>
                </form>
            </td>
        </tr>
        {{else}}
        <tr>
            <td colspan="6">No grades found.</td>
        </tr>
        {{/each}}
    </tbody>
</table>
<!-- Add Button -->
<form class="pl-3" action="/add_gradebook" method="GET">
    <button type="submit" class="bg-[#D0EBC5] rounded-xl w-48 px-2]">Add New Gradebook</button>
</form>

</body>

</html>