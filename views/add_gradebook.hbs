<style>
@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');
</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>EduLink</title>
<style>
      .error {
        color: red;
        font-size: 0.9em;
        padding-top: 0.5rem;
      }
    </style>
<body >
    <div class="flex flex-col items-center pt-10">
        <h2 class="text-2xl font-extrabold mb-5 text-gray-800">Add New Gradebook</h2>
        <div class=" rounded-lg p-6 w-full max-w-md">
            <form action="/gradebook/add_gradebook" method="POST" class="space-y-4">
                
                <div>
                    <label for="Course_ID" class="block text-gray-700 font-medium">Course ID:</label>
                    <input type="text" id="Course_ID" name="Course_ID" required
                           class="w-full mt-1 p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400">
                </div>
                
                <div>
                    <label for="Student_ID" class="block text-gray-700 font-medium">Student ID:</label>
                    <input type="text" id="Student_ID" name="Student_ID" required
                           class="w-full mt-1 p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400">
                </div>
                <div>
                    <label for="Final_Grade" class="block text-gray-700 font-medium">Final Grade:</label>
                    <input type="text" id="Final_Grade" name="Final_Grade" required
                           class="w-full mt-1 p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400">
                </div>
                <button type="submit"
                        class="w-full bg-blue-400 hover:bg-blue-500 text-white font-bold py-2 rounded-lg">
                    Add Gradebook
                </button>
                
            </form>
            {{#if message}}
                            <h4 class="error" alert alert-danger mt-4>{{message}}</h4>
                {{/if}}
        </div>
    </div>
</body>

</html>
