<script>
    document.addEventListener("DOMContentLoaded", function() {
        // Select all the <td> elements that display the date (using the class 'due-date')
        const dateElements = document.querySelectorAll('.due-date');

        dateElements.forEach(function(td) {
            // Get the current text content (the date string)
            const dateText = td.textContent || td.innerText;
            
            // Create a new Date object from the text content
            const date = new Date(dateText);

            // Check if it's a valid date
            if (!isNaN(date)) {
                // Format the date in the desired format, e.g., "MM/DD/YYYY"
                const formattedDate = date.toLocaleDateString();  // Adjust the format if needed
                
                // Update the content of the <td> with the formatted date
                td.textContent = formattedDate;
            }
        });
    });
</script>

