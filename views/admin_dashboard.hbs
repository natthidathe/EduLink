<style>
@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');
</style>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>EduLink</title>
</head>

<style>
      .error {
        color: red;
        font-size: 0.9em;
        padding-top: 0.5rem;
      }
    </style>
<body class="mt-[75px]">
    <nav class="navbar">
    <div class="nav-left">
        <h1 class="title">EduLink</h1>
    </div>
    <div class="nav-right">
        <a href="/home">
            <div class="home">Home</div>
        </a>
        <a href="">
            <div class="profile">Profile</div>
        </a>
        <a href="/">
             <button class="logout">Logout</button>
        </a>
    </div>
    </nav>
    <!-- Success Message -->
{{#if messages.success}}
    <p class="alert alert-success mt-4">{{{messages.success}}}</p>
{{/if}}
<h2 class="pt-2 pl-2 text-xl font-bold">Users</h2>
<table border="1">
    <thead>
        <tr>
            <th>User ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Password</th>
            <th>Role</th>
            <th>Actions</th> <!-- Add Actions column -->
        </tr>
    </thead>
    <tbody>
        {{#each users}}
        <tr>
            <td>{{this.User_ID}}</td>
            <td>{{this.Name}}</td>
            <td>{{this.Email}}</td>
            <td>{{this.Password}}</td>
            <td>{{this.Role}}</td>
            <td>
                <!-- Edit Button -->
                <a href="/admin_dashboard/edit_user/{{this.User_ID}}">
                    <button class="bg-white rounded-xl w-20" type="button">Edit</button>
                </a>

                <!-- Delete Button -->
                <form action="/admin_dashboard/delete_user/{{this.User_ID}}" method="POST" style="display:inline;">
                    <button class="bg-[rgba(255,135,135,0.51)] rounded-xl w-20" type="submit" onclick="return confirm('Are you sure you want to delete this user?')">Delete</button>
                </form>
            </td>
        </tr>
        {{else}}
        <tr>
            <td colspan="6">No users found.</td>
        </tr>
        {{/each}}
    </tbody>
</table>


<!-- Add Button -->
<form class="pl-3" action="/add_user" method="GET">
    <button type="submit" class="bg-[#D0EBC5] rounded-xl w-48 px-2]">Add New User</button>
</form>


<h2 class="pt-2 pl-2 text-xl font-bold">Courses</h2>
<table border="1">
    <thead>
        <tr>
            <th>Course ID</th>
            <th>Instructor ID</th>
            <th>Description</th>
            <th>Title</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each courses}}
        <tr>
            <td>{{this.Course_ID}}</td>
            <td>{{this.Instructor_ID}}</td>
            <td>{{this.Description}}</td>
            <td>{{this.Title}}</td>
            <td>
                <!-- Edit Button -->
                <a href="/admin_dashboard/edit_course/{{this.Course_ID}}">
                    <button class="bg-white rounded-xl w-20" type="button">Edit</button>
                </a>

                <!-- Delete Button -->
                <form action="/admin_dashboard/delete_course/{{this.Course_ID}}" method="POST" style="display:inline;">
                    <button class="bg-[rgba(255,135,135,0.51)] rounded-xl w-20" type="submit" onclick="return confirm('Are you sure you want to delete this user?')">Delete</button>
                </form>
            </td>
        </tr>
        {{else}}
        <tr>
            <td colspan="5">No courses found.</td>
        </tr>
        {{/each}}
    </tbody>
</table>
<!-- Add Button -->
<form class="pl-3" action="/add_course" method="GET">
    <button type="submit" class="bg-[#D0EBC5] rounded-xl w-48 px-2]">Add New Course</button>

</form>

</body>

</html>