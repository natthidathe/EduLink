<style>
@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');
</style>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>EduLink</title>
</head>

<style>
      .error {
        color: red;
        font-size: 0.9em;
        padding-top: 0.5rem;
      }
    </style>
    
<body class="mt-[75px]">
    <nav class="navbar">
    <div class="nav-left">
        <h1 class="title">EduLink</h1>
    </div>
    <div class="nav-right">
        <a href="/home">
            <div class="home">Home</div>
        </a>
        <a href="">
            <div class="profile">Profile</div>
        </a>
        <a href="/">
             <button class="logout">Logout</button>
        </a>
    </div>
    </nav>


    <div class="container">
  <h1 class="pt-2 pl-2 text-xl font-bold">Course Enrollment</h1>


  <!-- Enrollment Form -->
  <form action="/enroll" method="POST" class="form">
    <input type="text" name="student_id" placeholder="Student ID" required>
    <input type="text" name="course_id" placeholder="Course ID" required>
    <input type="text" name="title" placeholder="Course Title" required>
    <button type="submit">Enroll</button>
    {{#if message}}
                            <h4 class="error" alert alert-danger mt-4>{{message}}</h4>
                {{/if}}
  </form>

  <!-- Course List -->
  <h2 class="pt-2 pl-2 text-xl font-bold">Courses</h2>
<table border="1">
    <thead>
        <tr>
            <th>Course ID</th>
            <th>Instructor ID</th>
            <th>Instructor Name</th>
            <th>Description</th>
            <th>Title</th>
        </tr>
    </thead>
    <tbody>
        {{#each courses}}
        <tr>
            <td>{{this.Course_ID}}</td>
            <td>{{this.Instructor_ID}}</td>
            <td>{{this.Instructor_Name}}</td>
            <td>{{this.Description}}</td>
            <td>{{this.Title}}</td>
            
        </tr>
        {{else}}
        <tr>
            <td colspan="5">No courses found.</td>
        </tr>
        {{/each}}
    </tbody>
</table>
</div>

</body>

</html>